// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@192.168.1.109:3306/itp-website?schema=public"
}


model Users {
  user_id Int @id @default(autoincrement())
  username String @db.Text
  password String @db.Text
  fullname String @db.Text
  email String @db.Text
  level Level @default(User)
  status Status @default(Active)
  created_at DateTime @default(now()) @db.Timestamp
}

model Banner {
  banner_id Int @id @default(autoincrement())
  post_date DateTime @default(now()) @db.Date
  topic String @db.Text
  filename String @db.Text
  status Status @default(Active)
  active Active @default(Yes)
  created_at DateTime @default(now()) @db.Timestamp
  arr Int
}

model News {
  news_id Int @id @default(autoincrement())
  post_date DateTime @default(now()) @db.Date
  topic String @db.Text
  detail String @db.Text
  status Status @default(Publish)
  created_at DateTime @default(now()) @db.Timestamp
}

model Contact {
  contact_id Int @id @default(autoincrement())
  fullname String @db.Text
  company_name String @db.Text
  phone_number String @db.Text
  email String @db.Text
  message String @db.Text
  subject String @db.Text
  created_at DateTime @default(now()) @db.Timestamp
}


enum Level {
  Administrator
  User
}

enum Status {
  Active
  Inactive
  Publish
  Draft
}

enum Active {
  Yes
  No
}